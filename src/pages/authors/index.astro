---
import AuthorCard from "@/components/authors/AuthorCard.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { getCollection } from "astro:content";

const authors = await getCollection("author");
---

<MainLayout title="Authors">
  <div class="container px-6 py-10 mx-auto">
    <h1
      class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
    >
      Authors
    </h1>
    <a href="/">Regresar</a>

    <section class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
      <!-- AuthorCard -->

      {authors.map((author) => <AuthorCard author={author} />)}
    </section>
  </div>
</MainLayout>

<style is:global>
  a {
    @apply text-blue-500 hover:underline;
  }
</style>
